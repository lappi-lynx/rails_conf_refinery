<%= simple_form_for [refinery, :speakers_admin, @speaker] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @speaker,
              :include_object_name => true %>

  <%= render "locale_picker",
              :current_locale => Thread.current[:globalize_locale] if Refinery.i18n_enabled? %>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country  -%>

  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/speakers/speaker", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>


  </div>

  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company  -%>
  </div>


  <%= f.fields_for :social_contacts, @speaker.social_contacts do |contact| %>
    <%- @speaker.social_contacts.each do |key, value| %>
      <%= contact.text_field :value, :value => value -%>
      <%= contact.select :name, Refinery::SocialContact.values_for_select -%>
    <% end %>

  <% end %>


  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @speaker.photo,
               :toggle_image_display => false %>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.speakers.admin.speakers.speaker'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @speaker.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
