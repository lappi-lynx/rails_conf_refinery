<% content_for :body_content_title do %>
  <%= @speaker.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @speaker.name %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @speaker.country %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @speaker.description %>
    </p>
  </section>
  <section>
    <h1>Social Contacts</h1>
    <p>
      <%=raw @speaker.social_contacts %>
    </p>
  </section>
  <section>
    <h1>Company</h1>
    <p>
      <%=raw @speaker.company %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @speaker.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="speakers">
      <% @speakers.each do |speaker| %>
        <li>
          <%= link_to speaker.name, refinery.speakers_speaker_path(speaker) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
