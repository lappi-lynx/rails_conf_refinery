<% content_for :body do %>
  <section>
    <h5>Name</h5>
    <p>
      <%=raw @speaker.name %>
    </p>
  </section>
  <section>
    <h5>Country</h5>
    <p>
      <%=raw @speaker.country %>
    </p>
  </section>
  <section>
    <h5>Description</h5>
    <p>
      <%=raw @speaker.description %>
    </p>
  </section>
  <section>
    <h5>Social Contacts</h5>
    <p>
      <%=raw @speaker.social_contacts %>
    </p>
  </section>
  <section>
    <h5>Company</h5>
    <p>
      <%=raw @speaker.company %>
    </p>
  </section>
  <section>
    <h5>Photo</h5>
    <p>
      <%= image_fu @speaker.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="speakers">
      <% @speakers.each do |speaker| %>
        <li>
          <%= link_to speaker.name, refinery.speakers_speaker_path(speaker) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
